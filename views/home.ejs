<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <title>iForum: The Front Page </title>
</head>
<body>
  <%- include('partials/navbar') %>
  <%- include('partials/banner') %>

  <div class="main">
    <%- include('partials/sort') %>

    <% if (posts.length > 0) {
      posts.forEach((post) => { %>
      <article class="post" data-ref="<%= post.id %>">
        <div class="arrows">
          <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
          <span class="post-votes" data-ref="<%= post.id %>"><%= post.votes %></span>
          <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>

          <a href="/sf/<%= post.Subforum.name %>/<%= post.id %>"><img src="/images/post.png" height="55" width="55" class="thumbnail"></a>

          <div class="info">
            <header>
              <a href="/sf/<%= post.Subforum.name %>/<%= post.id %>"><%= post.title %></a>
            </header>

            <div>
              submitted <time title="<%= post.createdAt %>">-</time>
              by <span class="post-user"><a href="/u/<%= post.User.username %>"><%= post.User.username %></a></span>
              from <span><a href="/sf/<%= post.Subforum.name %>">/sf/<%= post.Subforum.name %></a></span>
            </div>

            <div>
              <ul>
                <li><a href="/submit/post/edit/<%= post.id %>">Edit</a></li>
                <li><a href="/submit/post/delete/<%= post.id %>">Delete</a></li>
              </ul>
            </div>
          </div>
        </div>
      </article>
    <% }) %>
    <% } else { %> 
      <h4>There are no posts </h4>
    <% } %> 
  </div>
</body>
</html>